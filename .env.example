# Stock Scanner Bot - Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git - it's in .gitignore

# =============================================================================
# FINANCIAL DATA APIS
# =============================================================================

# Polygon.io - Primary stock data provider (RECOMMENDED)
# Get your key: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=

# Finnhub - Financial data and news
# Get your key: https://finnhub.io/dashboard
FINNHUB_API_KEY=

# Alpha Vantage - Market data
# Get your key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# Tiingo - Stock data
# Get your key: https://api.tiingo.com/account/api/token
TIINGO_API_KEY=

# FRED - Federal Reserve Economic Data
# Get your key: https://fredaccount.stlouisfed.org/apikeys
FRED_API_KEY=

# =============================================================================
# AI SERVICES
# =============================================================================

# DeepSeek - Primary AI for analysis (REQUIRED)
# Get your key: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=

# X.AI (Grok) - X/Twitter intelligence (OPTIONAL)
# Get your key: https://x.ai/api
XAI_API_KEY=

# OpenAI - Fallback AI (OPTIONAL)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# INTELLIGENCE SOURCES
# =============================================================================

# PatentsView - Patent intelligence
# Get your key: https://patentsview.org/apis/purpose
PATENTSVIEW_API_KEY=

# =============================================================================
# COMMUNICATION
# =============================================================================

# Telegram Bot - For notifications
# Create bot: https://t.me/BotFather
# Send /newbot to BotFather to get token
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID - Your chat ID for receiving messages
# Get it by messaging @userinfobot
TELEGRAM_CHAT_ID=

# Bot Username (without @)
BOT_USERNAME=

# =============================================================================
# INFRASTRUCTURE (for local Modal CLI)
# =============================================================================

# Modal.com tokens - For deploying to Modal
# Get from: https://modal.com/settings/tokens
# Note: These are also in GitHub Secrets for CI/CD
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# =============================================================================
# SECURITY
# =============================================================================

# Webhook secret for API security
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable AI brain ranking (requires DEEPSEEK_API_KEY)
USE_AI_BRAIN_RANKING=true

# Enable learning system
USE_LEARNING_SYSTEM=true

# Enable Google Trends
USE_GOOGLE_TRENDS=true

# =============================================================================
# SCANNER SETTINGS (OPTIONAL - defaults are good)
# =============================================================================

# Minimum market cap for stocks (default: $300M)
MIN_MARKET_CAP=300000000

# Maximum concurrent scans (default: 50)
MAX_CONCURRENT_SCANS=50

# Story score thresholds
STORY_SCORE_HOT_THRESHOLD=70.0
STORY_SCORE_DEVELOPING_THRESHOLD=50.0

# =============================================================================
# CACHE SETTINGS (OPTIONAL)
# =============================================================================

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# =============================================================================
# SERVER SETTINGS (OPTIONAL)
# =============================================================================

# Enable debug mode (default: false)
DEBUG=false

# Server port (default: 5000)
PORT=5000

# Allowed CORS origins (comma-separated, default: *)
ALLOWED_CORS_ORIGINS=*

# =============================================================================
# NOTES
# =============================================================================

# Required keys for basic functionality:
# - DEEPSEEK_API_KEY (for AI analysis)
# - TELEGRAM_BOT_TOKEN (for notifications)
# - TELEGRAM_CHAT_ID (for notifications)
# - At least one financial data API key (POLYGON recommended)

# Optional but recommended:
# - POLYGON_API_KEY (best stock data)
# - FINNHUB_API_KEY (good for news)
# - XAI_API_KEY (for X/Twitter intelligence)

# After filling in values:
# 1. Save this file as .env (in same directory)
# 2. Add same keys to Modal secret: https://modal.com/zhuanleee/secrets
# 3. Test with: python3 src/config.py
